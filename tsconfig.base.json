{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@chronoco-fe/const/*": [
        "apps/Chronoco/src/app/const/*"
      ],
      "@chronoco-fe/core/*": [
        "apps/Chronoco/src/app/core/*"
      ],
      "@chronoco-fe/modals/*": [
        "apps/Chronoco/src/app/modals/*"
      ],
      "@chronoco-fe/models/*": [
        "apps/Chronoco/src/app/models/*"
      ],
      "@chronoco-fe/pipes/*": [
        "apps/Chronoco/src/app/pipes/*"
      ],
      "@chronoco-fe/shell/*": [
        "apps/Chronoco/src/app/shell/*"
      ],
      "@chronoco-fe/stores/*": [
        "apps/Chronoco/src/app/stores/*"
      ],
      "@chronoco-fe/ui/*": [
        "apps/Chronoco/src/app/ui/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
